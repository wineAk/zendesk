<footer class="relative border-t border-slate-200 bg-white flex flex-col items-center gap-8 p-6">

  <ul
    id="footer_categories"
    class="max-w-6xl w-full flex justify-center flex-wrap gap-2"
    x-data="{ categories: [] }"
    x-init="getZendeskCategories().then(data => categories = data)">
    <template x-for="category in categories">
      <li class="w-30 text-center">
        <a
          :href="category.html_url"
          class="text-sm text-gray-500"
          x-text="category.name"
        ></a>
      </li>
    </template>
  </ul>

  <div class="max-w-6xl w-full grid gap-6">
    <div class="flex flex-col items-center justify-between gap-6 text-center md:flex-row md:text-left">
      <div>
        {{#link "help_center"}}
        <img src="{{settings.logo}}" alt="{{t 'home_page' name=help_center.name}}" class="m-auto h-20" />
        {{#if settings.show_brand_name}}
        <span aria-hidden="true" class="hidden">{{help_center.name}}</span>
        {{/if}}
        {{/link}}
      </div>
      <div class="flex flex-col sm:flex-row gap-2 sm:gap-0 text-sm">
        <ul class="w-auto sm:w-40">
          <li>
            <a href="https://www.saaske.com/" class="text-sm text-gray-500" target="_blank">
              ホームページ
            </a>
          </li>
          <li>
            <a href="https://www.interpark.co.jp/" class="text-sm text-gray-500" target="_blank">
              運営会社
            </a>
          </li>
        </ul>
        <ul class="w-auto sm:w-40">
          <li>
            <a href="https://www.saaske.com/topics/" class="text-sm text-gray-500" target="_blank">
              プレスリリース
            </a>
          </li>
          <li>
            <a href="https://www.saaske.com/trouble/" class="text-sm text-gray-500" target="_blank">
              障害報告
            </a>
          </li>
        </ul>
        <ul class="w-auto sm:w-40">
          <li>
            <a href="https://www.saaske.com/information/privacy.html" class="text-sm text-gray-500" target="_blank">
              プライバシーポリシー
            </a>
          </li>
          <li>
            <a href="https://www.saaske.com/information/rule.html" class="text-sm text-gray-500" target="_blank">
              利用約款
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="text-center md:text-left">
      <span class="text-center text-sm text-gray-500">
        Copyright(C) Interpark., Co. Ltd. All rights reserved.
      </span>
    </div>

  </div>
</footer>